int findMissing(int a[], int n) { 
    
    // Your code here
    sort(a,a+n);
    int x=0;
    for(int i=0;i<n;i++)
     {
        
        if(a[i]>0)
        {
          if(a[i]-x>1)
          return x+1;
          
          x=a[i];
        }
    }
    return a[n-1]+1;
}
